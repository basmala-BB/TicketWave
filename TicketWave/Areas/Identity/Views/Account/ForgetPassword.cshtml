@model TicketWave.ViewModels.ForgetPasswordVM

@{
    ViewData["Title"] = "Forget Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm" style="width: 400px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-3">Forgot Password?</h3>
            <p class="text-center text-muted mb-4">Enter your username or email to recover your account</p>

            <form asp-action="ForgetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UserNameOREmail" class="form-label"></label>
                    <input asp-for="UserNameOREmail" class="form-control form-control-lg" placeholder="Username or Email" />
                    <span asp-validation-for="UserNameOREmail" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="Login" class="text-decoration-none me-3">Login</a>
                    <a asp-action="Index" class="text-decoration-none">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}