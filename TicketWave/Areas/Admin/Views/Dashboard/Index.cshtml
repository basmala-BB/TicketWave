@model TicketWave.Models.DashboardStats

<body style="margin:0; font-family: Arial, sans-serif; background: linear-gradient(135deg, #eef2f3, #8e9eab); min-height:100vh;">

    <div style="max-width: 1000px; margin: 50px auto; padding: 40px; background: rgba(255,255,255,0.9); border-radius: 20px; box-shadow: 0 0 30px rgba(0,0,0,0.1);">
        <h2 style="text-align:center; color:#2c3e50; margin-bottom:40px; font-weight:700;">Company Dashboard</h2>

        <!-- Counters -->
        <div style="display: flex; justify-content: space-between; flex-wrap: wrap; gap: 20px; margin-bottom: 40px;">
            <div style="flex:1; min-width:220px; background: linear-gradient(135deg, #8e44ad, #9b59b6); color:#fff; border-radius:15px; padding:25px; text-align:center; box-shadow:0 4px 10px rgba(0,0,0,0.2);">
                <h3>Categories</h3>
                <p style="font-size:2em; margin-top:10px;">@Model.TotalCategories</p>
            </div>
            <div style="flex:1; min-width:220px; background: linear-gradient(135deg, #27ae60, #2ecc71); color:#fff; border-radius:15px; padding:25px; text-align:center; box-shadow:0 4px 10px rgba(0,0,0,0.2);">
                <h3>Actors</h3>
                <p style="font-size:2em; margin-top:10px;">@Model.TotalActors</p>
            </div>
            <div style="flex:1; min-width:220px; background: linear-gradient(135deg, #f39c12, #f1c40f); color:#fff; border-radius:15px; padding:25px; text-align:center; box-shadow:0 4px 10px rgba(0,0,0,0.2);">
                <h3>Cinemas</h3>
                <p style="font-size:2em; margin-top:10px;">@Model.TotalCinemas</p>
            </div>
            <div style="flex:1; min-width:220px; background: linear-gradient(135deg, #c0392b, #e74c3c); color:#fff; border-radius:15px; padding:25px; text-align:center; box-shadow:0 4px 10px rgba(0,0,0,0.2);">
                <h3>Movies</h3>
                <p style="font-size:2em; margin-top:10px;">@Model.TotalMovies</p>
            </div>
        </div>

        <!-- Charts -->
        <div style="display:flex; flex-wrap:wrap; justify-content:space-between; gap:40px;">
            <div style="flex:1; min-width:400px; background:#fff; padding:20px; border-radius:15px; box-shadow:0 2px 15px rgba(0,0,0,0.1);">
                <h4 style="text-align:center; color:#2c3e50;">Growth Overview</h4>
                <canvas id="barChart" height="200"></canvas>
            </div>
            <div style="flex:1; min-width:400px; background:#fff; padding:20px; border-radius:15px; box-shadow:0 2px 15px rgba(0,0,0,0.1);">
                <h4 style="text-align:center; color:#2c3e50;">Performance Trend</h4>
                <canvas id="lineChart" height="200"></canvas>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Bar Chart
        new Chart(document.getElementById('barChart'), {
            type: 'bar',
            data: {
                labels: ['Categories', 'Actors', 'Cinemas', 'Movies'],
                datasets: [{
                    label: 'Count',
                    data: [
                        @Model.TotalCategories,
                        @Model.TotalActors,
                        @Model.TotalCinemas,
                        @Model.TotalMovies
                    ],
                    backgroundColor: ['#9b59b6', '#2ecc71', '#f1c40f', '#e74c3c']
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });

        // Line Chart
        new Chart(document.getElementById('lineChart'), {
            type: 'line',
            data: {
                labels: ['Q1', 'Q2', 'Q3', 'Q4'],
                datasets: [{
                    label: 'Performance',
                    data: [5, 9, 14, 20],
                    borderColor: '#2980b9',
                    backgroundColor: 'rgba(52,152,219,0.2)',
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: '#3498db'
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });
    </script>

</body>

