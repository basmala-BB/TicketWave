@model TicketWave.Models.DashboardStats

<h3 class="mb-4">Dashboard Statistics</h3>

<div style="max-width: 400px; margin: auto;">
    <!-- Pie Chart -->
    <canvas id="dashboardPieChart" width="300" height="300"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('dashboardPieChart').getContext('2d');
    const dashboardPieChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Categories', 'Actors', 'Cinemas', 'Movies'],
            datasets: [{
                label: 'Count',
                data: [
                    @Model.TotalCategories,
                    @Model.TotalActors,
                    @Model.TotalCinemas,
                    @Model.TotalMovies
                ],
                backgroundColor: [
                    'rgba(153, 102, 255, 0.7)',
                    'rgba(46, 204, 113, 0.7)', 
                    'rgba(241, 196, 15, 0.7)', 
                    'rgba(231, 76, 60, 0.7)'    
                ],
                borderColor: [
                    'rgba(153, 102, 255, 1)',
                    'rgba(46, 204, 113, 1)',
                    'rgba(241, 196, 15, 1)',
                    'rgba(231, 76, 60, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'right',
                },
                tooltip: {
                    enabled: true
                }
            }
        }
    });
</script>




