@using TicketWave.Models
@using TicketWave.Utitlies
@model IEnumerable<Movie>

<div class="container my-5">

    <div class="text-center mb-4">
        <h2 class="display-4 text-white">All Movies</h2>
        <a href="/Admin/Movie/Create" class="btn btn-success mt-3">Create New Movie</a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 movie-card">
                    <img src="@(string.IsNullOrEmpty(item.MainImg) ? "/assets/img/default-placeholder.png" : Url.Content($"~/images/{item.MainImg}"))"
                         class="card-img-top"
                         alt="@item.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text mb-1"><strong>Category:</strong> @item.Category?.Name</p>
                        <p class="card-text mb-1"><strong>Cinema:</strong> @item.Cinema?.Name</p>
                        <p class="card-text mb-1"><strong>Price:</strong> @item.price.ToString("c")</p>
                        <p class="card-text mb-1"><strong>DateTime:</strong> @item.DateTime.ToString("dd/MM/yyyy")</p>
                        <p class="card-text mb-3">
                            <strong>Status:</strong>
                            @if (item.status)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </p>

                        @if (User.IsInRole(SD.SUPER_ADMIN_ROLE) || User.IsInRole(SD.ADMIN_ROLE))
                        {
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="/Admin/Movie/Edit/@item.Id" class="btn btn-warning btn-sm flex-grow-1 me-1">Edit</a>
                                <a href="/Admin/Movie/Delete/@item.Id" class="btn btn-danger btn-sm btn-delete flex-grow-1 ms-1">Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background: url('@Url.Content("~/images/cinema-bg.jpg")') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    .movie-card {
        background: rgba(0, 0, 0, 0.35);
        backdrop-filter: blur(8px);
        border-radius: 15px;
        overflow: hidden;
        color: #fff;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 10px 20px rgba(0,0,0,0.6);
    }

        .movie-card:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 30px rgba(0,0,0,0.7);
        }

        .movie-card .card-img-top {
            height: 250px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.5);
        }

    .card-text strong {
        color: #ffd700;
    }

    h5.card-title {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .btn-success, .btn-warning, .btn-danger {
        font-size: 0.85rem;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".btn-delete");

        deleteButtons.forEach(button => {
            button.addEventListener("click", function (e) {
                e.preventDefault();
                const url = this.getAttribute("href");

                Swal.fire({
                    title: "Are you sure?",
                    text: "This action cannot be undone!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).
                then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Deleted!",
                            text: "The movie has been deleted.",
                            icon: "success"
                        });

                        window.location.href = url;
                    }
                });
            });
        });
    });
</script>

@section Scripts {
    @if (TempData["Notification"] is not null)
    {
        <script>
            toastr.success('@TempData["Notification"]')
        </script>
    }
}