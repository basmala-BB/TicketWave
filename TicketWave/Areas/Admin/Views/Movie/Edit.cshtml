@model MovieVM

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Edit Movie</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.Movie.Id" />

                <div class="mb-3">
                    <label for="name" class="form-label">Movie Name</label>
                    <input class="form-control" name="Name" value="@Model.Movie.Name" required />
                </div>

                <div class="mb-3">
                    <label for="Img" class="form-label">Main Image</label>
                    <input type="file" class="form-control" id="Img" name="Img" accept="image/*" onchange="previewImage(event)" />
                </div>

                <div class="mb-3">
                    <img id="preview"
                         src="~/images/@Model.Movie.MainImg"
                         alt="Current Image"
                         style="max-width: 200px; border:1px solid #ccc; padding:5px; border-radius:10px;" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Movie description..." style="height: 100px" name="Description">@Model.Movie.Description</textarea>
                        <label for="description">Movie Description...</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" step="0.01" class="form-control" name="Price" value="@Model.Movie.price" />
                </div>

                <div class="mb-3">
                    <label for="dateTime" class="form-label">Release Date</label>
                    <input type="datetime-local" class="form-control" name="DateTime"
                           value="@Model.Movie.DateTime.ToString("yyyy-MM-ddTHH:mm")" />
                </div>

                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Category</label>
                    <select name="CategoryId" class="form-select">
                        @foreach (var item in Model.categories)
                        {
                            if (item.Id == Model.Movie.CategoryId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="CinemaId" class="form-label">Cinema</label>
                    <select name="CinemaId" class="form-select">
                        @foreach (var item in Model.cinemas)
                        {
                            if (item.Id == Model.Movie.CinemaId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="Status" class="form-select">
                        @if (Model.Movie.status)
                        {
                            <option value="true" selected>Active</option>
                            <option value="false">Inactive</option>
                        }
                        else
                        {
                            <option value="true">Active</option>
                            <option value="false" selected>Inactive</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById("preview");

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
